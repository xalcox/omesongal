---
// Componente Hero con Header para O'Mesón
---
<header id="main-header"
        class="fixed top-0 left-0 w-full z-50 transition-all duration-500
               bg-gradient-to-b from-black/60 to-transparent
               py-4 sm:py-6 px-4 sm:px-10
               flex items-center justify-between">

  <!-- Logo como imagen que cambia con scroll -->
  <a href="/" class="block w-auto h-6 sm:h-8">
    <img id="logo-img"
         src="/assets/logob.svg"
         alt="O Mesón logo"
         class="h-full transition-all duration-500"
    />
  </a>

  <!-- Botón hamburguesa solo en móvil -->
  <button id="menu-toggle" class="sm:hidden text-white transition-colors duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <!-- Navegación + redes (escritorio) -->
  <div id="nav-items" class="hidden sm:flex items-center space-x-2 sm:space-x-6 text-white text-sm sm:text-base transition-colors duration-300">
    <!-- Facebook (oculto en móvil) -->
    <a href="https://www.facebook.com/people/O-Mesón-Cedeira/100068508182519/" 
       target="_blank" 
       rel="noopener noreferrer" 
       aria-label="Facebook"
       class="hidden sm:inline-block hover:text-blue-200 transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M22.675 0h-21.35C.597 0 0 .598 0 1.333v21.333C0 23.402.597 24 1.325 24H12.82v-9.333H9.692v-3.667h3.128V8.414c0-3.1 1.894-4.785 4.66-4.785 1.325 0 2.464.099 2.797.143v3.243l-1.918.001c-1.504 0-1.796.716-1.796 1.764v2.312h3.587l-.467 3.667h-3.12V24h6.116C23.403 24 24 23.402 24 22.667V1.333C24 .598 23.403 0 22.675 0z"/>
      </svg>
    </a>

    <a href="/carta" class="px-2 sm:px-4 py-1 sm:py-2 font-medium hover:text-blue-200 transition whitespace-nowrap">
      Carta
    </a>

    <a href="/sobre-nosotros" class="px-2 sm:px-4 py-1 sm:py-2 font-medium hover:text-blue-200 transition whitespace-nowrap">
      Sobre nosotros
    </a>

    <a href="/contacto" class="px-3 sm:px-5 py-1.5 sm:py-2 text-base font-medium rounded-md bg-blue-600 text-white hover:bg-blue-700 transition whitespace-nowrap">
      Reservar
    </a>
  </div>

  <!-- Menú desplegable en móvil -->
  <div id="mobile-menu" class="sm:hidden hidden absolute top-full left-0 w-full bg-sky-950 text-white flex flex-col items-start gap-4 px-6 py-4 text-base font-medium z-40 shadow-md transition-all">
    <a href="/carta" class="hover:text-blue-200 w-full">Carta</a>
    <a href="/sobre-nosotros" class="hover:text-blue-200 w-full">Sobre nosotros</a>
    <a href="/contacto" class="hover:text-blue-200 w-full">Reservar</a>
  </div>
</header>

<script is:inline>
  const header = document.getElementById('main-header');
  const navItems = document.getElementById('nav-items');
  const logoImg = document.getElementById('logo-img');
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  function updateHeaderStyles() {
    const isScrolled = window.scrollY > 250;
    const isMenuOpen = !mobileMenu.classList.contains('hidden');

    if (isScrolled || isMenuOpen) {
      header.classList.add('bg-white', 'shadow-md');
      header.classList.remove('bg-gradient-to-b', 'from-black/60', 'to-transparent');
      navItems.classList.add('text-blue-900');
      navItems.classList.remove('text-white');
      menuToggle.classList.add('text-blue-900');
      menuToggle.classList.remove('text-white');
      logoImg.src = '/assets/logoa.svg';
    } else {
      header.classList.remove('bg-white', 'shadow-md');
      header.classList.add('bg-gradient-to-b', 'from-black/60', 'to-transparent');
      navItems.classList.remove('text-blue-900');
      navItems.classList.add('text-white');
      menuToggle.classList.remove('text-blue-900');
      menuToggle.classList.add('text-white');
      logoImg.src = '/assets/logob.svg';
    }
  }

  window.addEventListener('scroll', updateHeaderStyles);

  menuToggle?.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
    updateHeaderStyles();
  });
</script>
