<section
  id="hero"
  class="relative flex flex-col items-center justify-center min-h-[100dvh] bg-cover bg-center overflow-hidden px-4 sm:px-10 animate-fade-in"
  style="background-image: url('/assets/fondo.png');"
>
  <!-- Capa de superposición azul degradada -->
  <div class="absolute inset-0 bg-gradient-to-b from-sky-900/80 to-sky-800/60"></div>

  <!-- Contenido principal -->
  <div class="relative z-10 w-full max-w-2xl mx-auto text-center text-white flex flex-col items-center justify-center">

    <!-- Icono decorativo -->
    <div class="mb-4 animate-fade-in-up delay-75" aria-hidden="true">
      <svg class="mx-auto h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2l3 7h7l-5.6 4.6L18.2 22 12 17.8 5.8 22l1.8-8.4L2 9h7z" />
      </svg>
    </div>

    <!-- Logo -->
    <img
      src="/assets/logohero.png"
      alt="O Mesón logo"
       class="mx-auto w-auto h-40 sm:h-52 md:h-64 lg:h-72 xl:h-80 max-w-full mb-6 animate-fade-in-up"
    />

    <!-- Subtítulo -->
    <p class="text-sm sm:text-base italic mb-3 text-sky-200 animate-fade-in-up delay-100">
      Tradición gallega en cada plato
    </p>

    <!-- Descripción -->
    <p class="text-base sm:text-lg mb-6 max-w-md mx-auto animate-fade-in-up delay-200 leading-relaxed">
      Descubre O Mesón en Cedeira, donde Galicia cobra sabor.
    </p>

    <!-- Botón -->
    <div class="animate-fade-in-up delay-400">
      <a
        href="/contacto"
        class="inline-block px-6 py-2 text-sm sm:text-base border-2 border-white text-white hover:bg-white hover:text-blue-900 font-medium rounded-md transition-all duration-300"
      >
        Reservar
      </a>
    </div>

  </div>
</section>


