---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
    <!-- SEO general -->
    <title>O Mesón Cedeira | Pulpo, cocina gallega y platos caseros</title>
    <meta name="description" content="O Mesón en Cedeira es un restaurante gallego con pulpo, cazuela de marisco, platos caseros y opciones veganas. Tradición y sabor frente al mar, desde 1986." />
    <meta name="keywords" content="restaurante O Mesón, restaurante en Cedeira, comida gallega, cocina gallega tradicional, pulpo con langostinos, platos caseros gallegos, restaurante vegano Cedeira, comer en Cedeira, mariscos Galicia" />
    <meta name="author" content="O Mesón" />
    <meta name="robots" content="index, follow" />
  
    <!-- Open Graph (Facebook, WhatsApp, Instagram, LinkedIn) -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:title" content="O Mesón Cedeira | Pulpo, cocina gallega y platos caseros" />
    <meta property="og:description" content="Descubre O Mesón en Cedeira (A Coruña), donde Galicia cobra sabor. Platos caseros, mariscos frescos y cocina tradicional gallega en un ambiente acogedor." />
    <meta property="og:image" content="https://omeson.es/opengraph-hero.jpg" />
    <meta property="og:url" content="https://omeson.es" />
    <meta property="og:site_name" content="O Mesón" />
  
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="O Mesón Cedeira | Pulpo, cocina gallega y platos caseros" />
    <meta name="twitter:description" content="Descubre O Mesón en Cedeira (A Coruña), donde Galicia cobra sabor. Platos caseros, mariscos frescos y cocina tradicional gallega." />
    <meta name="twitter:image" content="https://omeson.es/opengraph-hero.jpg" />
  
    <!-- Favicon -->
    <link rel="icon" href="/favicon.png" type="image/png" />
  
    <!-- Estilos globales -->
    <link rel="stylesheet" href="/styles/global.css" />
  
    <!-- Slot para metadatos adicionales específicos de cada página -->
    <slot name="head" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Restaurant",
        "name": "O Mesón",
        "image": "https://omeson.es/opengraph-hero.jpg",
        "url": "https://omeson.es",
        "telephone": "+34 981481226",
        "priceRange": "€€",
        "servesCuisine": ["Gallega", "Casera", "Mariscos", "Vegana"],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Cedeira",
          "addressRegion": "A Coruña",
          "addressCountry": "ES"
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
            "opens": "13:00",
            "closes": "16:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
            "opens": "20:00",
            "closes": "23:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Sunday",
            "opens": "13:00",
            "closes": "16:00"
          }
        ]
      }
      </script>
    </head>
    
  
  

  <body>
    <slot />
    <Header />

    <!-- Botón de llamada fijo abajo a la izquierda (solo móvil) -->
    <a href="tel:+34981481226"
        class="fixed bottom-6 right-6 z-[9999]
              bg-blue-600 hover:bg-blue-700 text-white
              p-4 sm:p-5 rounded-full shadow-xl transition-all duration-300"
        aria-label="Llamar al restaurante">
      <svg xmlns="http://www.w3.org/2000/svg"
            class="w-7 h-7 sm:w-8 sm:h-8"
            fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 5a2 2 0 012-2h3.6a1 1 0 01.95.684l1.2 3.6a1 1 0 01-.24 1.036l-1.7 1.7a11.042 11.042 0 005.1 5.1l1.7-1.7a1 1 0 011.036-.24l3.6 1.2a1 1 0 01.684.95V19a2 2 0 01-2 2h-1C9.163 21 3 14.837 3 7V5z"/>
      </svg>
    </a>

    <Footer />
  </body>
</html>
