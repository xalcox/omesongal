---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contacto">

  <section
    id="reservas"
    class="relative min-h-screen w-full bg-cover bg-center flex flex-col items-center justify-start px-6 sm:px-10 pt-40 pb-24"
    style="background-image: url('/public/assets/fondo.png');"
  >
    <!-- Capa azul degradada encima del fondo -->
    <div class="absolute inset-0 bg-gradient-to-b from-sky-900/70 to-sky-800/70"></div>

    <!-- Contenido principal -->
    <div class="relative z-10 flex flex-col items-center justify-center w-full max-w-6xl">

      <!-- Tarjeta blanca animada -->
      <div class="bg-white/90 backdrop-blur-md shadow-lg rounded-2xl p-12 w-full flex flex-col items-center gap-12 animate-fade-in-up">
      
        <!-- Título y subtítulo -->
        <div class="text-center text-blue-900">
          <div class="mb-3" aria-hidden="true">
            <svg class="mx-auto h-8 w-8 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3 7h7l-5.6 4.6L18.2 22 12 17.8 5.8 22l1.8-8.4L2 9h7z" />
            </svg>
          </div>

          <h1 class="text-6xl sm:text-7xl font-serif font-bold mb-6">
            Reservar
          </h1>

          <p class="text-lg sm:text-xl italic text-blue-800">
            Reserva tu experiencia gastronómica en O Mesón
          </p>
        </div>

        <!-- Horario -->
        <div class="text-blue-900 text-center w-full lg:w-3/4">
          <h2 class="text-3xl font-bold mb-8">Horario</h2>
          <div class="flex flex-col space-y-3 text-lg w-full">
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Domingo:</span>
              <span>12:00-19:00</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Lunes:</span>
              <span class="text-red-600">Cerrado</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Martes:</span>
              <span class="text-red-600">Cerrado</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Miércoles:</span>
              <span class="text-red-600">Cerrado</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Jueves:</span>
              <span class="text-red-600">Cerrado</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Viernes:</span>
              <span>12:00-16:30 / 20:00-23:59</span>
            </div>
            <div class="flex justify-between px-4 sm:px-8">
              <span class="font-semibold">Sábado:</span>
              <span>12:00-17:00 / 20:00-1:30</span>
            </div>
          </div>
        </div>

        <!-- Botones de contacto -->
        <div class="flex flex-col sm:flex-row gap-8 items-center">
          <a href="tel:+34981481226"
             class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-blue-900 text-white hover:bg-blue-800 font-semibold rounded-full text-lg transition-transform transform hover:scale-105 w-64 text-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 5.25C3 4.01 4.01 3 5.25 3h2.13c.6 0 1.13.36 1.36.91l1.2 2.78c.21.5.09 1.09-.31 1.47l-1.2 1.14a15.06 15.06 0 006.59 6.59l1.14-1.2c.38-.4.97-.52 1.47-.31l2.78 1.2c.55.24.91.77.91 1.36v2.13c0 1.24-1.01 2.25-2.25 2.25H18c-8.28 0-15-6.72-15-15V5.25z" />
            </svg>
            Llamar
          </a>

          <a href="https://wa.me/34981481226" target="_blank"
             class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-[#25D366] text-white hover:bg-green-400 font-semibold rounded-full text-lg transition-transform transform hover:scale-105 w-64 text-center">
            <img src="/public/assets/whatsapp.png" alt="WhatsApp" class="w-6 h-6" />
            WhatsApp
          </a>
        </div>

      </div>

    </div>
  </section>

</Layout>
